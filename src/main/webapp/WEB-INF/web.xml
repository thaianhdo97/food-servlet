<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>CreateFoodServlet</servlet-name>
        <servlet-class>controller.CreateFoodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateFoodServlet</servlet-name>
        <url-pattern>/foods/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListFoodServlet</servlet-name>
        <servlet-class>controller.ListFoodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListFoodServlet</servlet-name>
        <url-pattern>/foods/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditFoodServlet</servlet-name>
        <servlet-class>controller.EditFoodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditFoodServlet</servlet-name>
        <url-pattern>/foods/detail</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteFoodServlet</servlet-name>
        <servlet-class>controller.DeleteFoodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteFoodServlet</servlet-name>
        <url-pattern>/foods/delete</url-pattern>
    </servlet-mapping>
</web-app>